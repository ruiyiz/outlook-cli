{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "rootDir": "..",
    "types": ["bun"],
    "typeRoots": ["./node_modules/@types", "../node_modules/@types"],
    "paths": {
      "@cli/*": ["../src/*"]
    }
  },
  "include": ["src", "../src/executor", "../src/types", "../src/lib"],
  "exclude": ["node_modules"]
}
